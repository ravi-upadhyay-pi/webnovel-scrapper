{
    "editor.rulers": [80],
    // ctrl + alt to see inlay hints
    "editor.inlayHints.enabled": "offUnlessPressed",
    // ctrl-k + ctrl+i to see hover info
    "editor.hover.enabled": true,
    "editor.hover.delay": 1000,
    // ctrl + space intellisense autocomplete
    "editor.quickSuggestions": {
        "other": false,
        "comments": false,
        "strings": false
    },
    // only use tab to accept suggestion
    "editor.acceptSuggestionOnEnter": "off",
    // do not randomly show suggestion
    "editor.suggestOnTriggerCharacters": false,
    "workbench.tree.indent": 18,
    "workbench.tree.renderIndentGuides": "always",
    "workbench.colorCustomizations": {
        "tree.indentGuidesStroke": "#0b443e"
    },
    "eslint.run": "onSave",
    "editor.formatOnSave": true,
    "[javascript][typescript][html][scss][json]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode",
    },
    "[rust]": {
        "editor.defaultFormatter": "statiolake.vscode-rustfmt",
    }
}
